{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@/assets": ["./assets/*"],
      "@/components": ["./components/*"],
      "@/ui": ["./components/ui/*"],
      "@/constants": ["./constants/*"],
      "@/hooks": ["./hooks/*"],
      "@/libs": ["./libs/*"],
      "tailwind.config": ["./tailwind.config.js"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
